<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="javalinos.onlinestore.vista.JavaFX.VistaPedidosJavaFX">
    <top>
        <HBox alignment="CENTER" spacing="10.0" BorderPane.alignment="CENTER">
            <children>
                <Button mnemonicParsing="false" onAction="#NuevoPedido" text="Añadir Pedido" />
                <Button mnemonicParsing="false" onAction="#EliminarPedido" text="Eliminar Pedido" />
                <Button mnemonicParsing="false" onAction="#EditarPedido" text="Editar Pedido" />
                <Button mnemonicParsing="false" onAction="#ListarTodosPedidos" text="Listar Todos" />
                <Button mnemonicParsing="false" onAction="#ListarPedidosPendientes" text="Pendientes" />
                <Button mnemonicParsing="false" onAction="#ListarPedidosEnviados" text="Enviados" />
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </HBox>
    </top>
    <center>
        <TableView fx:id="tablaPedidos" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn fx:id="columnaNumero" prefWidth="75.0" text="Número" />
                <TableColumn fx:id="columnaCliente" prefWidth="75.0" text="Cliente" />
                <TableColumn fx:id="columnaArticulo" prefWidth="75.0" text="Artículo" />
                <TableColumn fx:id="columnaCantidad" prefWidth="75.0" text="Cantidad" />
                <TableColumn fx:id="columnaFecha" prefWidth="90.0" text="Fecha" />
                <TableColumn fx:id="columnaEnvio" prefWidth="75.0" text="Envío" />
                <TableColumn fx:id="columnaPrecio" prefWidth="100.0" text="Precio Total" />
            </columns>
        </TableView>
    </center>
</BorderPane>
