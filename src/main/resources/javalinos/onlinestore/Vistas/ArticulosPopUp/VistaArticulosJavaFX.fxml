<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="javalinos.onlinestore.vista.JavaFX.VistaArticulosJavaFX">
    <top>
        <HBox alignment="CENTER" spacing="10.0" BorderPane.alignment="CENTER">
            <children>
                <Button mnemonicParsing="false" onAction="#onNuevoArticulo" text="Añadir Artículo" />
                <Button mnemonicParsing="false" onAction="#onModificarArticulo" text="Modificar Articulo" />
                <Button mnemonicParsing="false" onAction="#onEliminarArticulo" text="EliminarArticulo" />
                <Button mnemonicParsing="false" onAction="#onListarArticulo" text="Mostrar Articulo" />
                <Button mnemonicParsing="false" onAction="#onStockArticulo" text="Mostrar Stock Articulos" />
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </HBox>
    </top>

    <center>
        <TableView fx:id="tablaArticulos" prefHeight="100.0" prefWidth="100.0" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn fx:id="columnaID"   text="Id" />
                <TableColumn fx:id="columnaCodigo"  text="Codigo" />
                <TableColumn fx:id="columnaDescripcion"  text="Descripción" />
                <TableColumn fx:id="columnaPrecio"  text="Precio" />
                <TableColumn fx:id="columnaPreparacion" text="Preparación" />
            </columns>
        </TableView>
    </center>
</BorderPane>
